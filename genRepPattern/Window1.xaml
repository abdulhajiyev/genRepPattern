<Window x:Class="genRepPattern.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:genRepPattern"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox Name="Text1" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="20"></TextBox>
        <TextBox Name="Text2" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Stretch" FontSize="20"></TextBox>
        <Button Grid.Row="2" Margin="10" Click="Button_Click">OK</Button>
    </Grid>
</Window>
